@page
@model DFI.FaultReporting.Public.Pages.Jobs.JobsMenuModel
@{
    ViewData["Title"] = "Jobs menu";
}

<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<meta name="description" content="Fault Reporting jobs menu">
<meta name="theme-color" content="#142062" />

<div class="container">
    <h1>@ViewData["Title"]</h1>
    <br />
    <h2>Select from one of the options below</h2>
    <hr />
    <div class="row">
        <div class="col-md-12 text-center">
            <div class="small-tile">
                <a class="nav-link" aria-label="View jobs link" title="View jobs" asp-page="/Jobs/ViewJobs"><i class="fa-solid fa-map-location-dot"></i> View jobs</a>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 text-center">
            <div class="small-tile">
                <a class="nav-link" aria-label="Todays jobs link" title="Todays jobs" asp-page="/Jobs/TodaysJobs"><i class="fa-solid fa-route"></i> Todays jobs</a>
            </div>
        </div>
    </div>
</div>
