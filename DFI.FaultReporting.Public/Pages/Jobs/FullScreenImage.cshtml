@page
@model DFI.FaultReporting.Public.Pages.Jobs.FullScreenImageModel
@{
    ViewData["Title"] = "Repair image";
}

<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<meta name="description" content="Fault Reporting full screen image">
<meta name="theme-color" content="#142062" />

@{
    <div class="container">
        <div class="col-md-12">
            <div class="row text-center">
                <img src="data:image/@Model.RepairPhoto.Type;base64,@Model.RepairPhoto.Data" style="max-width: 100%; max-height: 100%;" />
            </div>
        </div>
    </div>
    <br />
}
