@page
@model DFI.FaultReporting.Admin.Pages.Admin.StaffAdmin.DeleteModel

@{
    ViewData["Title"] = "Delete staff member";
}
<div class="container">
    <h1>@ViewData["Title"]</h1>
    <br />
    <h2>Are you sure you want to delete this staff member?</h2>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Staff.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Staff.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Staff.Prefix)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Staff.Prefix)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Staff.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Staff.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Staff.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Staff.LastName)
        </dd>      
    </dl>
    <div class="btn-group">
        <form method="post">
            <input type="hidden" asp-for="Staff.ID" />
            <a asp-page="./Index" class="btn btn-lg btn-outline-secondary"><i class="fa-regular fa-circle-left"></i> Back</a>
            &nbsp;
            <button type="submit" class="btn btn-outline-danger btn-lg" asp-route-id="@Model.Staff.ID"><i class="fa-regular fa-trash-can"></i> Delete</button>
        </form>
    </div>
    <br />
</div>