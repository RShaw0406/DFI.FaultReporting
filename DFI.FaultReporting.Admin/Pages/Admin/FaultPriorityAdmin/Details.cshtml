@page
@model DFI.FaultReporting.Admin.Pages.Admin.FaultPriorityAdmin.DetailsModel

@{
    ViewData["Title"] = "Fault priority details";
}
<div class="container">
    <h1>@ViewData["Title"]</h1>
    <br />
    <h2>Details of fault status</h2>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FaultPriority.InputBy)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FaultPriority.InputBy)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FaultPriority.InputOn)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FaultPriority.InputOn)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FaultPriority.Active)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FaultPriority.Active)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FaultPriority.FaultPriorityDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FaultPriority.FaultPriorityDescription)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FaultPriority.FaultPriorityRating)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FaultPriority.FaultPriorityRating)
        </dd>
    </dl>
    <div class="btn-group">
        <a asp-page="./Index" class="btn btn-lg btn-outline-secondary"><i class="fa-regular fa-circle-left"></i> Back</a>
        &nbsp;
        <a asp-page="./Edit" class="btn btn-outline-primary btn-lg" asp-route-id="@Model.FaultPriority.ID"><i class="fa-solid fa-pen-to-square"></i> Edit</a>
    </div>
    <br />
</div>