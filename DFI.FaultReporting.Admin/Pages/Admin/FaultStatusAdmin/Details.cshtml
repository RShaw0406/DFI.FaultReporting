@page
@model DFI.FaultReporting.Admin.Pages.Admin.FaultStatusAdmin.DetailsModel

@{
    ViewData["Title"] = "Fault status details";
}

<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<meta name="description" content="Fault Reporting fault status details">
<meta name="theme-color" content="#142062" />

<div class="container">
    <h1>@ViewData["Title"]</h1>
    <br />
    <h2>Details of fault status</h2>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FaultStatus.FaultStatusDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FaultStatus.FaultStatusDescription)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FaultStatus.InputBy)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FaultStatus.InputBy)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FaultStatus.InputOn)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FaultStatus.InputOn)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FaultStatus.Active)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FaultStatus.Active)
        </dd>
    </dl>
    <div class="btn-group">
        <a asp-page="./Index" class="btn btn-lg btn-outline-secondary"><i class="fa-regular fa-circle-left"></i> Back</a>
        &nbsp;
        <a asp-page="./Edit" class="btn btn-outline-primary btn-lg" asp-route-id="@Model.FaultStatus.ID"><i class="fa-solid fa-pen-to-square"></i> Edit</a>
    </div>
    <br />
</div>